<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#332C39"
    android:orientation="vertical"
    android:padding="48dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="LOGIN"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="36dp"
        />

    <ImageView
        android:id="@+id/logoSocialDrive"
        android:layout_width="249dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/diario" />


    <EditText
        android:id="@+id/input_usuario"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-light"
        android:layout_height="0dp"
        android:textColorHint="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4"
        android:background="@drawable/edittext_background"
        android:hint="Username:"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"

        />


    <EditText
        android:id="@+id/input_contrasena"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-light"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.4"
        android:background="@drawable/edittext_background"
        android:textColorHint="@color/black"
        android:hint="ContraseÃ±a:"
        android:gravity="center"
        android:inputType="textPassword"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_usuario"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:fontFamily="sans-serif-light"
                android:onClick="onRadioButtonClicked"
                android:text="Usuario"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radio_admin"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/radio_usuario"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="sans-serif-light"
                android:onClick="onRadioButtonClicked"
                android:text="Administrador"
                android:textColorHint="@color/black"
                android:textSize="19dp" />

        </RadioGroup>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_iniciosesion"
            android:layout_width="118dp"
            android:layout_height="68dp"
            android:textSize="10dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="#E91E63"
            android:text="Iniciar Sesion" />

        <Button
            android:id="@+id/btn_registro"
            android:layout_width="107dp"
            android:layout_height="68dp"
            android:layout_marginLeft="50dp"
            android:textSize="10dp"
            android:backgroundTint="#E91E63"
            android:text="Registrar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_instagram"
            android:layout_width="55dp"
            android:layout_height="54dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/instagram" />


        <ImageView
            android:id="@+id/image_facebook"
            android:layout_width="55dp"
            android:layout_height="54dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/facebook" />

    </LinearLayout>

</LinearLayout>