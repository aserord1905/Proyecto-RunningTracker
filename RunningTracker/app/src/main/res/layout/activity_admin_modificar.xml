<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminModificarActivity"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#609EA2"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="4dp"
                android:background="#332C39"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#332C39"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/titulo1"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del rectángulo 1"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/fecha1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del rectángulo 2"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/descripcion1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del rectángulo 3"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#332C39"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/titulo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del rectángulo 1"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/fecha2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del rectángulo 2"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/descripcion2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del rectángulo 3"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#332C39"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/titulo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Información del rectángulo 1"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/fecha3"
                        android:layout_width="match_parent"
                        android:fontFamily="sans-serif-light"
                        android:layout_height="wrap_content"
                        android:text="Información del rectángulo 2"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/descripcion3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del rectángulo 3"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_modificar_desafios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:backgroundTint="#E91E63"
                android:text="Modificar desafíos" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="@color/teal_700"
        app:itemTextColor="@color/black"
        app:menu="@menu/nav_menu_admin"/>

</androidx.drawerlayout.widget.DrawerLayout>
